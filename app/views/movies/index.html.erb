<div class='d-flex justify-content-between m-4 p-3'>
<h1>Liste des films</h1>
<%= link_to 'Voir mes listes', lists_path, class:'btn btn-primary' %>
</div>
<div class="cards">
  <% @movies.each do |movie| %>
    <div class="card" style="width: 18rem;">
      <img src='<%= movie.poster_url %>' class="card-img-top" alt='<%= movie.title %>'>
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
        <p class="card-text"><%= movie.overview %></p>
        <p class="card-text">Note : <%= movie.rating %></p>
        <%= link_to 'Voir ce film', movie_path(movie), class:'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
